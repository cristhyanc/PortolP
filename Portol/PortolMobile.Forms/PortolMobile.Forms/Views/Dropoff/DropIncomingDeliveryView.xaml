<?xml version="1.0" encoding="utf-8" ?>
<controls:ExtendedContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PortolMobile.Forms.Views.Dropoff.DropIncomingDeliveryView"
             xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             xmlns:circleIma="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             xmlns:i18n="clr-namespace:PortolMobile.Forms.Helper"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:controls="clr-namespace:PortolMobile.Forms.Controls"                              
             xmlns:viewModelBase="clr-namespace:PortolMobile.Forms;assembly=PortolMobile.Forms"
             viewModelBase:ViewModelLocator.AutoWireViewModel="true"
             BackgroundImage="Map_image"
              x:Name="page"
             xmlns:DropoffStyle="clr-namespace:PortolMobile.Forms.Styles">
    <controls:ExtendedContentPage.Resources>
        <DropoffStyle:DropoffStyles/>
    </controls:ExtendedContentPage.Resources>
    <controls:ExtendedContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >

            <StackLayout BackgroundColor="White" >

                <ffimageloadingsvg:SvgCachedImage Style="{StaticResource LogoStyle}" Margin="0,20,0,0"  />
                <ActivityIndicator   IsRunning="{Binding IsBusy}" Style="{StaticResource ActivityIndicatorStyle}"  IsVisible="{Binding IsBusy}"  />

            </StackLayout>


            <Label Text="{i18n:Translate IncomingDeliveries}" HorizontalOptions="Center" HorizontalTextAlignment="Center" Margin="0,30,0,0" ></Label>


            <ListView                
                    SelectedItem="{Binding SelectedSafetyC, Mode=TwoWay }" 
                    CachingStrategy="RecycleElement" HasUnevenRows="true"
                    RefreshCommand="{Binding RefreshListCommand}"
                    IsRefreshing="{Binding IsBusy, Mode=TwoWay}" 
                    ItemsSource="{Binding Deliveries}">
                <ListView.ItemTemplate>
                    <DataTemplate >
                        <ViewCell >                         
                            <Frame CornerRadius="4" BackgroundColor="LightGray"  Padding="0" >
                                <StackLayout VerticalOptions="Fill" Padding="5" Orientation="Horizontal"  >
                                    <StackLayout>
                                        <Label Text="{Binding Description}"></Label>
                                        <Label Text="{Binding Sender.FullName}"></Label>
                                        <Label Text="{Binding DropoffAddress.FullAddress}"></Label>
                                    </StackLayout>
                                    <Button Margin="0,7,0,7"  Text="{i18n:Translate Delivered}"   
                                            Command="{Binding Source={x:Reference page}, Path = BindingContext.DeliveredCommand }" 
                                            CommandParameter="{Binding DeliveryID}" 
                                    TextColor="White"  BackgroundColor="#4c4c4c"   ></Button>

                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Footer>
                    <StackLayout>

                    </StackLayout>
                </ListView.Footer>
            </ListView>

        </StackLayout>
    </controls:ExtendedContentPage.Content>
</controls:ExtendedContentPage>